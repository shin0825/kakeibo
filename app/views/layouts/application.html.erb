<!DOCTYPE html>
<html>
<head>
  <title>Kakeibo</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
  <section class="container-fluid">
    <div class="row">
      <div class="mt-3 mx-auto col-lg-8 col-md-11 col-sm-11">
        <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "mt-3 alert alert-#{message_type}") %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </section>
</body>
</html>

<%= form_for(@spend, url: monthly_closings_path) do |f| %>
<h2>お金の月次調整</h2>
<div class="form-group">
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label '財布' %>
  <%= f.collection_select :wallet_id, Wallet.all, :id, :name, {}, { :class => 'form-control collection' } %>

  <%= f.label '者名' %>
  <%= f.collection_select :user_id, User.all, :id, :name, {}, { :class => 'form-control collection' } %>

  <%= f.label '対象年月' %>
  <%= f.date_select :created_at, { :discard_day => true } , { :class => 'form-control date' } %>

  <%= f.text_field :amount, :placeholder => '金額', class: 'form-control input' %>
</div>

<div class="form-group">
  <%= f.submit '月次決算登録', class: 'btn' %>
</div>
<% end %>
<footer>
  <div class="card">
    <%= link_to '戻る', root_path %>
  </div>
</footer>

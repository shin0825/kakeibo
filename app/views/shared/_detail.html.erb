<%= render 'shared/detail_pager' %>
<% if @summary.length > 0 %>
<% @summary.each do |key,summarys| %>
<div class="card">
  <div class="card-header">
    <% if @page_type == 'incomes' %>
    <%= key.strftime('%Y/%m/%d') + 'の収入' %>
    <% elsif @page_type == 'spends' %>
    <%= key.strftime('%Y/%m/%d') + 'の出費' %>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr class="table">
        <th>摘要</th>
        <th>金額</th>
        <th>作成</th>
      </tr>
    </thead>
    <tbody>
      <% summarys.each do |summary| %>
      <tr>
        <td><%= summary.reason_name %></td>
        <td><%= summary.amount.to_s(:delimited, delimiter: ',') %></td>
        <td><%= summary.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
<% else %>
<div class="card">
  <%= @p_targetDate.strftime('%Y/%m') %>のデータ、なし
</div>
<% end %>
<%= render 'shared/detail_pager' %>
<footer>
  <div class="card">
    <%= link_to '戻る', summary_show_path %>
  </div>
</footer>
